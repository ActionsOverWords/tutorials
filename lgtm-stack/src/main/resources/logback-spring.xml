<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name"/>

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <labels>
            service_name = ${appName}
            host = ${HOSTNAME}
            level = %level
        </labels>
        <message>
            <pattern>%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SS}} %5p ${PID:- } --- [%15.15t] %-40.40logger{39} : [%X{traceId:-},%X{spanId:-}] %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
        </message>
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
            <requestTimeoutMs>5000</requestTimeoutMs>
        </http>
        <batch>
            <maxItems>100</maxItems>
            <timeoutMs>10000</timeoutMs>
        </batch>
        <verbose>true</verbose>
    </appender>

    <logger name="org.hibernate.SQL" level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="tutorials.lgtm" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>
</configuration>
